# parallel make, ccache
BR2_JLEVEL=14
BR2_CCACHE=y
BR2_CCACHE_DIR="/tmp/buildroot-ccache-$(BR2_ARCH)"

# enable overlay support (used for custom init scripts)
BR2_ROOTFS_OVERLAY="overlay"
BR2_TARGET_GENERIC_ROOT_PASSWD="linaro"

# need cpio for initramfs
BR2_TARGET_ROOTFS_CPIO=y
BR2_TARGET_ROOTFS_CPIO_GZIP=y
# compress the tar image
BR2_TARGET_ROOTFS_TAR_XZ=y

# don't run a getty; etc/inittab configured for auto-root login
BR2_TARGET_GENERIC_GETTY=n

# ssh needed for ARM workload-automation
BR2_PACKAGE_DROPBEAR=y

# Testing utils
BR2_PACKAGE_STRESS=y
BR2_PACKAGE_TRACE_CMD=y

# Linaros linaro-testsuites repository
BR2_PACKAGE_LINARO_TESTSUITES=y
# needed by BR2_PACKAGE_LINARO_TESTSUITES
#BR2_PACKAGE_PYTHON=y
#BR2_PACKAGE_PYTHON_PYC_ONLY=y
#BR2_PACKAGE_PYTHON_UNICODEDATA=y
#BR2_PACKAGE_PYTHON_UCS2=y
#BR2_PACKAGE_PYTHON_NUMPY=y
#BR2_PACKAGE_LIBFFI=y
#BR2_PACKAGE_KEYUTILS=y
#BR2_PACKAGE_COREUTILS=y
#BR2_PACKAGE_BUSYBOX_SHOW_OTHERS=y
#BR2_PACKAGE_BASH=y
#BR2_SYSTEM_BIN_SH_BASH=y

# add eudev for automatic module loading support
BR2_INIT_BUSYBOX=y
BR2_ROOTFS_DEVICE_CREATION_DYNAMIC_EUDEV=y
